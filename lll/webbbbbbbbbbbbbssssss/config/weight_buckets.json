{
  "version": "2024-01-15",
  "description": "Fixed weight buckets configuration for V1 scoring model",
  "total_max_score": 100,
  "buckets": {
    "profession_employment": {
      "max_weight": 30,
      "description": "Profession category, employment type, industry stability",
      "components": {
        "profession_category": {
          "max": 15,
          "scoring": {
            "Doctor": 15,
            "Engineer": 12,
            "Lawyer": 12,
            "CA/Accountant": 11,
            "Teacher": 8,
            "Business Owner": 10,
            "Government Employee": 9,
            "Banker": 10,
            "IT Professional": 11,
            "Consultant": 9,
            "Other": 5
          }
        },
        "employment_type": {
          "max": 10,
          "scoring": {
            "Salaried (MNC)": 10,
            "Salaried (Indian Company)": 8,
            "Self-Employed (Verified)": 9,
            "Business Owner (Verified)": 10,
            "Freelancer": 6,
            "Contractor": 7,
            "Unemployed": 0
          }
        },
        "industry_stability": {
          "max": 5,
          "scoring": {
            "Stable (Healthcare, Government, Banking)": 5,
            "Moderate (IT, Manufacturing)": 3,
            "Volatile (Startups, Real Estate)": 1,
            "Unknown": 0
          }
        }
      }
    },
    "income_financial": {
      "max_weight": 25,
      "description": "Income band and financial document verification",
      "components": {
        "income_band": {
          "max": 15,
          "scoring": {
            "50L+": 15,
            "25L-50L": 12,
            "15L-25L": 10,
            "10L-15L": 8,
            "5L-10L": 5,
            "Below 5L": 2
          }
        },
        "verification_bonus": {
          "max": 10,
          "scoring": {
            "ITR_verified": 5,
            "GST_verified": 3,
            "Bank_statement_verified": 2,
            "PAN_verified": 0
          },
          "note": "Bonuses are additive, max 10 total"
        }
      }
    },
    "business_experience": {
      "max_weight": 15,
      "description": "Years of business/professional experience",
      "components": {
        "years_in_business": {
          "max": 15,
          "scoring": {
            "10+": 15,
            "5-10": 12,
            "3-5": 8,
            "1-3": 5,
            "0-1": 2
          }
        }
      }
    },
    "residence_pin_wealth": {
      "max_weight": 10,
      "description": "PIN code wealth index based on property/rental data",
      "components": {
        "pin_wealth_category": {
          "max": 10,
          "scoring": {
            "premium": 10,
            "upper_middle": 7,
            "middle": 5,
            "lower_middle": 3,
            "basic": 1
          },
          "note": "Mapped from pin_wealth_index.json lookup table"
        }
      }
    },
    "social_proof": {
      "max_weight": 10,
      "description": "Online ratings, reviews, professional presence",
      "components": {
        "google_rating": {
          "max": 5,
          "scoring": {
            "4.5+": 5,
            "4.0-4.5": 3,
            "3.5-4.0": 1,
            "Below 3.5": 0
          }
        },
        "review_count": {
          "max": 3,
          "scoring": {
            "100+": 3,
            "50-100": 2,
            "10-50": 1,
            "Below 10": 0
          }
        },
        "linkedin_presence": {
          "max": 2,
          "scoring": {
            "true": 2,
            "false": 0
          }
        }
      }
    },
    "assets_lifestyle": {
      "max_weight": 10,
      "description": "Property ownership, phone type, vehicle ownership",
      "components": {
        "property_ownership": {
          "max": 7,
          "scoring": {
            "Owns property (verified)": 7,
            "Rents premium": 3,
            "Rents standard": 1,
            "Unknown": 0
          }
        },
        "phone_type": {
          "max": 2,
          "scoring": {
            "Premium smartphone": 2,
            "Standard smartphone": 1,
            "Basic phone": 0
          }
        },
        "vehicle_ownership": {
          "max": 1,
          "scoring": {
            "Premium vehicle": 1,
            "Standard vehicle": 0.5,
            "None": 0
          }
        }
      }
    }
  }
}
